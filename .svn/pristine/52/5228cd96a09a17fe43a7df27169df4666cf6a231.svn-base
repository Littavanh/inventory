<?php

/*---------------------------------- call from unRecieve print.php --------------------------*/
function headerPrint()
{
	$release = $_GET["release"];

	if (isset($release) && $release != "") {
		$sql = "select * from v_export where `release` = '$release' group by `release`";
		$result = mysql_query($sql);
		return $result;
	}
}
/*-------- select to list the product -------*/
function detailPrint()
{
	$release = $_GET["release"];
	if (isset($release) && $release != "") {

		$sql = "select * from v_export where `release` = '$release'";

		$result = mysql_query($sql);
		return $result;
	}
}

function checkApproveSignature()
{
	$release = $_GET["release"];
	if (isset($release) && $release != "") {

		$sql = "select * from v_approve_history where release_id = '$release' group by approve_level";

		$result = mysql_query($sql);
		return $result;
	}
}